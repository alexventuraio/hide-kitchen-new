<p id="notice"><%= notice %></p>

<h1>Stores</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Domain</th>
      <th>Adress</th>
      <th>City</th>
      <th>Zip code</th>
      <th>State</th>
      <th>Country</th>
      <th>Phone number</th>
      <th>Email</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.name %></td>
        <td><%= store.domain %></td>
        <td><%= store.adress %></td>
        <td><%= store.city %></td>
        <td><%= store.zip_code %></td>
        <td><%= store.state %></td>
        <td><%= store.country %></td>
        <td><%= store.phone_number %></td>
        <td><%= store.email %></td>
        <td><%= store.active %></td>
        <td><%= link_to 'Show', store %></td>
        <td><%= link_to 'Edit', edit_store_path(store) %></td>
        <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Store', new_store_path %>
